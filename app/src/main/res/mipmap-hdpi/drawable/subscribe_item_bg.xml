<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="5dp"/>
                    <stroke android:width="1.0dip" android:color="@color/subscribe_item_normal_stroke" android:dashWidth="4.0dip" android:dashGap="2.0dip" />
                    <solid android:color="@color/subscribe_item_drag_bg" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:radius="5dp"/>
            <stroke android:width="1.0dip" android:color="@color/news_selected_color" />
            <solid android:color="@color/subscribe_item_selected_bg" />
        </shape>
    </item>

    <!--当item 是不可以操作的情况，显示背景-->
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="5dp"/>
            <stroke android:width="0.5dip" android:color="@color/news_selected_color" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp"/>
            <stroke android:width="0.5dip" android:color="@color/subscribe_item_pressed_stroke" />
            <solid android:color="@color/subscribe_item_pressed_bg" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="5dp"/>
            <stroke android:width="0.5dip" android:color="@color/subscribe_item_normal_stroke" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</selector>