<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="small_t_size">@dimen/small_text</item>
        <item name="middle_t_size">@dimen/middle_text</item>
        <item name="large_t_size">@dimen/large_text</item>
    </style>



    <style name="AppTheme.small">
        <item name="small_t_size">@dimen/sp12</item>
        <item name="middle_t_size">@dimen/sp14</item>
        <item name="large_t_size">@dimen/sp16</item>
    </style>

    <style name="AppTheme.middle">
        <item name="small_t_size">@dimen/small_text</item>
        <item name="middle_t_size">@dimen/middle_text</item>
        <item name="large_t_size">@dimen/large_text</item>
    </style>

    <style name="AppTheme.large">
        <item name="small_t_size">@dimen/sp20</item>
        <item name="middle_t_size">@dimen/sp22</item>
        <item name="large_t_size">@dimen/sp24</item>
    </style>

    <style name="statusBarStyle">
        <!--<item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>-->
    </style>

    <style name="big_tb_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dp10</item>
        <item name="android:background">@drawable/bg_tb</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>

    </style>

    <style name="login_edit_style">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorHint">@color/xlightGray</item>
        <item name="android:textSize">@dimen/sp16</item>

    </style>

    <style name="login_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp40</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/dp10</item>
        <item name="android:background">@drawable/login_sure_bg</item>
        <item name="android:gravity">center</item>

    </style>


    <style name="small_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:layout_marginLeft">@dimen/middle_padding</item>
        <item name="android:singleLine">true</item>
    </style>

    <dimen name="small_text">14sp</dimen>
    <dimen name="dp90">90dp</dimen>


    <style name="full" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowFullscreen">true</item>-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">false</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
    </style>

    <style name="mine_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:layout_marginLeft">@dimen/dp5</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="mall_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:padding">@dimen/dp5</item>
        <item name="android:lineSpacingMultiplier">1.2</item>

    </style>

    <style name="login_image_style">

        <item name="android:layout_width">@dimen/dp40</item>
        <item name="android:layout_height">@dimen/dp40</item>
        <item name="android:padding">@dimen/dp5</item>
    </style>

    <style name="about_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/middle_text</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#85BDF3</item>
        <item name="android:layout_marginTop">@dimen/middle_padding</item>
    </style>

    <style name="pop_ani_style">
        <item name="android:windowEnterAnimation">@anim/menu_bottombar_in</item>
        <item name="android:windowExitAnimation">@anim/menu_bottombar_out</item>
    </style>

    <style name="small_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/dp10</item>
        <item name="android:paddingRight">@dimen/dp10</item>
        <item name="android:paddingTop">@dimen/dp5</item>
        <item name="android:paddingBottom">@dimen/dp5</item>
        <item name="android:background">@drawable/small_btn</item>

    </style>

    <style name="coupon_text">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/dp10</item>

    </style>

    <style name="order_black_text">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textColor">@color/dark_gray</item>

    </style>

    <style name="order_red_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textColor">@color/price_red</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="supply_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:padding">@dimen/dp10</item>

    </style>

    <style name="barrel_linear_style_top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp10</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="barrel_linear_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp10</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/barrel_item_bg</item>
    </style>

    <style name="goods_add_btn_style">
        <item name="android:layout_width">@dimen/dp30</item>
        <item name="android:layout_height">@dimen/dp30</item>
        <item name="android:padding">@dimen/dp5</item>
        <item name="android:background">@drawable/all_btn_bg</item>
        <item name="android:clickable">true</item>

    </style>

    <style name="info_setting_linear_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp10</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/all_btn_bg</item>

    </style>

    <style name="info_setting_img">
        <item name="android:layout_width">@dimen/dp30</item>
        <item name="android:layout_height">@dimen/dp30</item>
        <item name="android:padding">@dimen/dp5</item>
    </style>

    <style name="cart_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp10</item>
        <item name="android:background">@drawable/small_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="normal_icon_style">
        <item name="android:layout_width">@dimen/dp35</item>
        <item name="android:layout_height">@dimen/dp35</item>
        <item name="android:padding">@dimen/dp5</item>
    </style>

    <style name="normal_icon_style_small">
        <item name="android:layout_width">@dimen/dp30</item>
        <item name="android:layout_height">@dimen/dp30</item>
        <item name="android:padding">@dimen/dp5</item>
    </style>

    <style name="normal_icon_style_big">
        <item name="android:layout_width">@dimen/dp40</item>
        <item name="android:layout_height">@dimen/dp40</item>
        <item name="android:padding">@dimen/dp5</item>
    </style>

    <style name="main_img">
        <item name="android:layout_width">@dimen/dp90</item>
        <item name="android:layout_height">@dimen/dp90</item>
        <item name="android:padding">@dimen/dp20</item>
        <item name="android:background">@drawable/circle_orange</item>
    </style>

    <style name="pop_info_linear_style">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/dp15</item>
        <item name="android:paddingRight">@dimen/dp15</item>
        <item name="android:paddingTop">@dimen/dp5</item>
        <item name="android:paddingBottom">@dimen/dp5</item>
        <item name="android:background">@drawable/pop_info_linear_bg</item>
    </style>
</resources>
