<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.blue.xingui.activity.AddAddressActivity">

    <include layout="@layout/top" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_people_name"
            android:layout_width="@dimen/dp100"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:text="收货人姓名："
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:layout_toRightOf="@+id/tv_people_name"
            android:background="@null"
            android:hint=""
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/lightGray"
            android:textSize="14sp"
            tools:text="姓名" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_people_phonenum"
            android:layout_width="@dimen/dp100"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:inputType="number"
            android:text="手机号码："
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_people_phonenum"
            android:layout_toRightOf="@+id/tv_people_phonenum"
            android:background="@null"
            android:hint=""
            android:inputType="phone"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/lightGray"
            android:textSize="14sp"
            tools:text="18888888888" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_pca_detail"
            android:layout_width="@dimen/dp100"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:text="省 市 区 ："
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_pca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:layout_toRightOf="@+id/tv_pca_detail"
            android:background="@null"
            android:clickable="true"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/lightGray"
            android:textSize="14sp"
            tools:text="北京市海淀区" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_address_detail"
            android:layout_width="@dimen/dp100"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:text="详细地址："
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:layout_toRightOf="@+id/tv_address_detail"
            android:background="@null"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/lightGray"
            android:textSize="14sp"
            tools:text="上地六街康得大厦" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/dp20"
        android:background="@color/bg_color" />

    <TextView
        style="@style/login_btn"
        android:clickable="true"
        android:text="保存"
        android:onClick="btn_sure"
        />
</LinearLayout>
