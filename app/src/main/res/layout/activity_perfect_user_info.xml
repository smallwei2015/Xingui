<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_perfect_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.blue.xingui.activity.PerfectUserInfo">


    <include layout="@layout/top"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp50"
        android:layout_marginLeft="@dimen/middle_padding"
        android:layout_marginRight="@dimen/middle_padding"
        android:layout_marginBottom="@dimen/middle_padding"
        android:background="@drawable/login_input_bg"
        android:id="@+id/phone"
        android:orientation="horizontal"
        >

        <ImageView
            style="@style/login_image_style"
            android:src="@mipmap/phone"/>

        <EditText
            style="@style/login_edit_style"
            android:id="@+id/phone_edit"
            android:inputType="phone"
            android:hint="请输入手机号"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/middle_padding"
        android:background="@drawable/login_input_bg"
        android:id="@+id/address"
        android:orientation="horizontal">

        <ImageView
            style="@style/login_image_style"
            android:src="@mipmap/address"/>

        <TextView
            style="@style/login_edit_style"
            android:id="@+id/address_edit"
            android:gravity="center_vertical"
            android:hint="选择地址"/>

        <ImageView
            style="@style/login_image_style"
            android:src="@mipmap/arrow_down"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/middle_padding"
        android:layout_marginRight="@dimen/middle_padding"
        android:layout_marginTop="@dimen/middle_padding"
        android:layout_marginBottom="@dimen/dp50"
        android:background="@drawable/login_input_bg"
        android:id="@+id/verify"
        android:orientation="horizontal">
        <ImageView
            style="@style/login_image_style"
            android:src="@mipmap/key"/>

        <EditText
            style="@style/login_edit_style"
            android:id="@+id/verify_edit"
            android:inputType="number"
            android:hint="请输入验证码"/>

        <TextView
            android:layout_width="@dimen/dp100"
            android:layout_height="match_parent"
            android:background="@color/light_gray"
            android:gravity="center"
            android:padding="@dimen/middle_padding"
            android:textColor="@color/white"
            android:id="@+id/getVerify"
            android:text="获取验证码"/>
    </LinearLayout>




    <TextView
        style="@style/login_btn"
        android:text="确定"
        android:onClick="btn_sure"
        />

</LinearLayout>
