<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blue.xingui.activity.LoginActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/login_bg_color">

    <include layout="@layout/top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp50"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:background="@drawable/login_input_bg"
        android:id="@+id/name"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/dp5"
            android:src="@mipmap/username"/>

        <EditText
            style="@style/login_edit_style"
            android:id="@+id/name_edit"
            android:inputType="text"
            android:hint="用户名/手机号"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:background="@drawable/login_input_bg"
        android:id="@+id/pass"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/dp5"
            android:src="@mipmap/password"/>

        <EditText
            style="@style/login_edit_style"
            android:id="@+id/pass_edit"
            android:inputType="textPassword"
            android:hint="请输入密码"/>
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:textSize="@dimen/sp15"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:textColor="@color/lightGray"
        android:id="@+id/forget_pass"
        android:onClick="btn_forget"
        android:layout_gravity="right"/>


    <TextView
        style="@style/login_btn"
        android:text="登录"
        android:clickable="true"
        android:onClick="btn_login"
        android:id="@+id/login"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp10">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/lightGray"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp14"
            android:textColor="@color/lightGray"
            android:padding="@dimen/dp10"
            android:text="其它登录方式"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/lightGray"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/middle_padding"
        android:layout_marginRight="@dimen/middle_padding">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="loginByWeChat"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_login_wechat"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ssdk_oks_classic_wechat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                android:layout_marginTop="@dimen/small_padding"
                android:text="微信"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="loginByQQ"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_login_qq"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ssdk_oks_classic_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                android:layout_marginTop="@dimen/small_padding"
                android:text="QQ"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="loginBySina"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_login_sina"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ssdk_oks_classic_sinaweibo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                android:layout_marginTop="@dimen/small_padding"
                android:text="微博"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp15"
            android:textColor="@color/lightGray"
            android:text="没有账号?"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击注册"
            android:textSize="@dimen/sp15"
            android:textColor="@color/primaryColor"
            android:id="@+id/toRegister"
            />
    </LinearLayout>

</LinearLayout>
