<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/small_padding"
    android:layout_marginBottom="1dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="this is title"
        android:id="@+id/news_triple_title"
        android:padding="@dimen/small_padding"
        android:textSize="@dimen/large_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/small_padding">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@mipmap/no_data"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/small_padding"
            android:id="@+id/news_triple_icon1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@mipmap/no_data"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/small_padding"
            android:id="@+id/news_triple_icon2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@mipmap/no_data"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/small_padding"
            android:id="@+id/news_triple_icon3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right">

        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            style="@style/small_text"
            android:text="新龙岩"
            android:id="@+id/news_single_from"/>
        <TextView
            style="@style/small_text"
            android:text="0 评论"
            android:id="@+id/news_single_comment"/>
        <TextView
            style="@style/small_text"
            android:id="@+id/news_single_time"
            android:text="刚刚"/>



        <TextView
            style="@style/small_text"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/news_selected_color"
            android:id="@+id/news_single_kind"
            android:text="置顶"
            android:visibility="gone"
            />

    </LinearLayout>
</LinearLayout>