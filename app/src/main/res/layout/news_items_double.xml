<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/small_padding"
    android:background="@color/white"
    android:layout_marginBottom="1dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/middle_text"
        android:id="@+id/news_double_title"
        android:maxLines="2"
        android:padding="@dimen/small_padding"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/small_padding">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:padding="@dimen/small_padding"
            android:id="@+id/news_double_icon1"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:padding="@dimen/small_padding"
            android:id="@+id/news_double_icon2"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right">

        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            style="@style/small_text"
            android:text="新龙岩"
            android:id="@+id/news_single_from"/>
        <TextView
            style="@style/small_text"
            android:text="0 评论"
            android:id="@+id/news_single_comment"/>
        <TextView
            style="@style/small_text"
            android:id="@+id/news_single_time"
            android:text="刚刚"/>



        <TextView
            style="@style/small_text"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/news_selected_color"
            android:id="@+id/news_single_kind"
            android:text="置顶"
            android:visibility="gone"
            />

    </LinearLayout>
</LinearLayout>